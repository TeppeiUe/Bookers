<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody></tbody>
</table>
<h2>New Book</h2>
  <%=form_with model:@book,local:true do|f|%>
    <div class="field">
      <div class="label">Title</div>
      <%=f.text_field:title%>
    </div>
    <div class="field">
      <div class="label">body</div>
      <%=f.text_area:body%>
    </div>
    <div class="action">
      <%=f.submit "Create Book"%>
    </div>
  <%end%>