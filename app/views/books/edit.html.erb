<h1>Editing Book</h1>
<%=form_with model:@book,local:true do|f|%>
  <%if @book.errors.any?%>
    <div id="error_explanation">
      <h2><%=pluralize(@book.errors.count,"error")%> prohibited this book from being saved:</h2>
      <ul>
        <%@book.errors.full_messages.each do|message|%>
          <li><%=message%></li>
        <%end%>
      </ul>
    </div>
  <%end%>
  <div class="field">
    <%=f.label:title,class:"book_title"%>
    <%=f.text_field:title,class:"book_title"%>
  </div>
  <div class="field">
    <%=f.label:body,class:"book_body"%>
    <%=f.text_area:body,class:"book_body"%>
  </div>
  <div class="action">
    <%=f.submit"Update Book",class:"btn"%>
  </div>
<%end%>
<%=link_to"Show",book_path(@book)%> | <%=link_to"Back",books_path%>